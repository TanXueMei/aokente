<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--公共部分-->
    <attr name="textSize" format="dimension"/>
    <!--<attr name="icon" format="reference"/>-->
    <attr name="text" format="reference|string" />
    <attr name="total" format="integer" />
    <attr name="pos" format="integer"/>
    <!--<attr name="color" format="color" />-->

    <declare-styleable name="ChangeColorIconView">
        <attr name="icon" />
        <attr name="color" />
        <attr name="text" />
        <attr name="text_size" format="dimension" />
    </declare-styleable>

    <!-- 自定义标题栏显示-->
    <declare-styleable name="GlobalTitleLayout">
        <attr name="global_title" format="reference|string" />
        <attr name="global_back" format="boolean" />
    </declare-styleable>

    <!-- 图片切换效果，自定义属性-->
    <declare-styleable name="FlashView">
        <attr name="effect">
            <enum name="accordion" value="0" />
            <enum name="cube" value="1" />
            <enum name="def" value="2" />
            <enum name="depthPage" value="3" />
            <enum name="inRighDown" value="4" />
            <enum name="inRightUp" value="5" />
            <enum name="rotate" value="6" />
            <enum name="zoomOutPage" value="7" />
        </attr>
    </declare-styleable>
    <!--自定义圆形头像-->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
    <!--车辆管理中的  右滑删除组件-->
    <declare-styleable name="SwipeLayout">
        <attr name="drag_edge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
        </attr>
        <attr name="leftEdgeSwipeOffset" format="dimension" />
        <attr name="rightEdgeSwipeOffset" format="dimension" />
        <attr name="topEdgeSwipeOffset" format="dimension" />
        <attr name="bottomEdgeSwipeOffset" format="dimension" />
        <attr name="show_mode" format="enum">
            <enum name="lay_down" value="0" />
            <enum name="pull_out" value="1" />
        </attr>
        <attr name="clickToClose" format="boolean" />
    </declare-styleable>
    <!--自动轮播图-->
    <declare-styleable name="BGABanner">

        <!-- 指示点容器背景 -->
        <attr name="banner_pointContainerBackground" format="reference|color" />
        <!-- 指示点背景 -->
        <attr name="banner_pointDrawable" format="reference" />
        <!-- 指示点容器左右内间距 -->
        <attr name="banner_pointContainerLeftRightPadding" format="dimension" />
        <!-- 指示点上下外间距 -->
        <attr name="banner_pointTopBottomMargin" format="dimension" />
        <!-- 指示点左右外间距 -->
        <attr name="banner_pointLeftRightMargin" format="dimension" />
        <!-- 指示点的位置 -->
        <attr name="banner_pointGravity">
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_horizontal" value="0x01" />
        </attr>
        <!-- 是否开启自动轮播 -->
        <attr name="banner_pointAutoPlayAble" format="boolean" />
        <!-- 自动轮播的时间间隔 -->
        <attr name="banner_pointAutoPlayInterval" format="integer" />
        <!-- 页码切换过程的时间长度 -->
        <attr name="banner_pageChangeDuration" format="integer" />
        <!-- 页面切换的动画效果 -->
        <attr name="banner_transitionEffect" format="enum">
            <enum name="defaultEffect" value="0" />
            <enum name="alpha" value="1" />
            <enum name="rotate" value="2" />
            <enum name="cube" value="3" />
            <enum name="flip" value="4" />
            <enum name="accordion" value="5" />
            <enum name="zoomFade" value="6" />
            <enum name="fade" value="7" />
            <enum name="zoomCenter" value="8" />
            <enum name="zoomStack" value="9" />
            <enum name="stack" value="10" />
            <enum name="depth" value="11" />
            <enum name="zoom" value="12" />
        </attr>
        <!-- 提示文案的文字颜色 -->
        <attr name="banner_tipTextColor" format="reference|color" />
        <!-- 提示文案的文字大小 -->
        <attr name="banner_tipTextSize" format="dimension" />
    </declare-styleable>

    <!--gridPasswordView  网格输入框-->
    <declare-styleable name="gridPasswordView">
        <attr name="textColor" format="color|reference" />
        <attr name="textSize" />
        <attr name="lineColor" format="color" />
        <attr name="gridColor" format="color" />
        <attr name="lineWidth" format="dimension" />
        <attr name="passwordLength" format="integer" />
        <attr name="passwordTransformation" format="string" />
        <attr name="passwordType" format="enum">
            <enum name="numberPassword" value="0" />
            <enum name="textPassword" value="1" />
            <enum name="textVisiblePassword" value="2" />
            <enum name="textWebPassword" value="3" />
        </attr>
    </declare-styleable>


    <!--免费计时条-->
    <declare-styleable name="TimeProcessBar">
        <attr name="total"/>
        <attr name="pos"/>
        <attr name="textSize"/>
        <attr name="barHeight" format="dimension" />
        <attr name="paddingLeft" format="dimension" />
        <attr name="paddingRight" format="dimension" />
    </declare-styleable>
    <!--定义带有图片的EditText-->
    <declare-styleable name="IconEditText">
        <attr name="icon"/>
        <attr name="text" />
        <attr name="textSize"/>
        <attr name="hint" format="reference|string"/>
        <attr name="password" format="reference|string"/>
    </declare-styleable>
    <!--定义带有图片的textView-->
    <declare-styleable name="IconTextView">
        <attr name="icon"/>
        <attr name="text" />
        <attr name="textSize"/>
    </declare-styleable>
    <!--自定义文字底部的指示线条-->
    <declare-styleable name="SlidingUnderline">
        <attr name="total" />
        <attr name="pos" />
    </declare-styleable>
</resources>