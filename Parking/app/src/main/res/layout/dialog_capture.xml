<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <!--android:background="@color/transparent"-->
    <Button
        android:id="@+id/capture_camera_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gauge_30"
        android:layout_marginRight="@dimen/gauge_30"
        android:layout_marginTop="@dimen/gauge_10"
        android:background="@drawable/shape_button_origin"
        android:text="拍照" />

    <View style="@style/HorizontalDivider" />

    <Button
        android:id="@+id/capture_gallery_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gauge_30"
        android:layout_marginRight="@dimen/gauge_30"
        android:layout_marginTop="@dimen/gauge_10"
        android:background="@drawable/shape_button_origin"
        android:text="从相册中选择" />

    <View style="@style/HorizontalDivider" />

    <Button
        android:id="@+id/capture_cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/gauge_30"
        android:background="@drawable/shape_button"
        android:text="取消"
        android:textColor="@color/white" />

</LinearLayout>