<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shape_white_bg"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:padding="@dimen/gauge_5"
    android:layout_height="wrap_content">
   <TextView
       android:id="@+id/dilog_title"
       android:layout_width="match_parent"
       android:layout_height="@dimen/gauge_40"
       android:gravity="center"
       android:textColor="#F0000000"
       android:textSize="@dimen/text_16"
       android:text="确定删除地址吗？"/>
    <View
        android:layout_width="match_parent"
        android:background="#F5F5F5"
        android:layout_height="@dimen/gauge_1"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/gauge_40"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/gauge_20"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="@dimen/gauge_120"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_gray_bg"
            android:gravity="center"
            android:textSize="@dimen/text_16"
            android:textColor="@color/color_text_80"
            android:text="取消"/>
        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="@dimen/gauge_120"
            android:layout_height="match_parent"
            android:background="@drawable/shape_blue_bg"
            android:layout_marginLeft="@dimen/gauge_20"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_16"
            android:textColor="@color/white"
            android:text="确定"/>
    </LinearLayout>
</LinearLayout>