<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/history_container_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gauge_80"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/history_location_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gauge_5"
            android:layout_marginTop="@dimen/gauge_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/history_location_iv"
                android:layout_width="@dimen/gauge_30"
                android:layout_height="@dimen/gauge_30"
                android:src="@mipmap/green" />
            <TextView
                android:id="@+id/history_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/gauge_5"
                android:textColor="@color/black"
                android:textSize="@dimen/text_18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/history_location_layout"
            android:layout_marginLeft="@dimen/gauge_23"
            android:layout_marginTop="@dimen/gauge_3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/history_carnumber_hint_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车牌号："
                    android:textColor="@color/gray_holo_dark"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:id="@+id/history_carnumber_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/gauge_3"
                    android:textColor="@color/gray_holo_dark"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_16" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/history_time_des_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="驶入："
                    android:textColor="@color/gray_holo_dark"
                    android:textSize="@dimen/text_16" />
                <TextView
                    android:id="@+id/history_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/gauge_8"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray_holo_dark"
                    android:textSize="@dimen/text_16" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>