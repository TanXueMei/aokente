<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aokente="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/gauge_48"
        android:background="@color/titleColor"
        android:paddingLeft="@dimen/gauge_12">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="40dp"
            android:src="@mipmap/back" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:text="取回密码"/>
    </RelativeLayout>

    <include
        android:id="@+id/fetch_auth_layout"
        layout="@layout/lable_forgetpsw_1"
        android:layout_marginLeft="@dimen/gauge_20"
        android:layout_marginRight="@dimen/gauge_20"
        android:layout_marginTop="@dimen/gauge_50"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/fetch_reset_layout"
        layout="@layout/lable_forgetpsw_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/gauge_50"
        android:layout_marginLeft="@dimen/gauge_20"
        android:layout_marginRight="@dimen/gauge_20"
        android:visibility="gone" />

</FrameLayout>