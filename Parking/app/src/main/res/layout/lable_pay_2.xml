<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_bg"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="@dimen/gauge_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="right"
        android:orientation="vertical" >

        <TextView
            style="@style/pay_TextView_left"
            android:text="停车类型：" />

        <TextView
            style="@style/pay_TextView_left"
            android:text="停车开始时间：" />

        <TextView
            style="@style/pay_TextView_left"
            android:text="停车结束时间：" />

        <TextView
            style="@style/pay_TextView_left"
            android:text="停车时长：" />

        <TextView
            style="@style/pay_TextView_left"
            android:text="应付停车费：" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/pay_parking_type_tv"
            style="@style/pay_TextView_left" />

        <TextView
            android:id="@+id/pay_park_start_time_tv"
            style="@style/pay_TextView_left" />

        <TextView
            android:id="@+id/pay_park_end_time_tv"
            style="@style/pay_TextView_left" />

        <TextView
            android:id="@+id/pay_park_time_len_tv"
            style="@style/pay_TextView_left" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/pay_park_money_tv"
                style="@style/pay_TextView_left" />

            <TextView
                style="@style/pay_TextView_left"
                android:text="元" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>