<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/history_location_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gauge_5"
        android:paddingLeft="@dimen/gauge_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/history_location_iv"
            android:layout_width="@dimen/gauge_30"
            android:layout_height="@dimen/gauge_30"
            android:src="@mipmap/green" />
        <TextView
            android:id="@+id/history_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gauge_5"
            android:layout_toRightOf="@id/history_location_iv"
            android:text=""
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/text_18" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:layout_marginTop="@dimen/gauge_6"
        android:paddingLeft="@dimen/gauge_30"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车牌号："
            android:textColor="@color/gray_holo_dark"
            android:textSize="@dimen/text_16" />
        <TextView
            android:id="@+id/history_carnumber_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_holo_dark"
            android:textSize="@dimen/text_16" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:layout_marginTop="@dimen/gauge_6"
        android:paddingLeft="@dimen/gauge_30"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/history_time_des_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缴费时间："
            android:textColor="@color/gray_holo_dark"
            android:textSize="@dimen/text_16" />
        <TextView
            android:id="@+id/history_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_holo_dark"
            android:textSize="@dimen/text_16" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:layout_marginTop="@dimen/gauge_6"
        android:paddingLeft="@dimen/gauge_30"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缴费方式："
            android:textColor="@color/gray_holo_dark"
            android:textSize="@dimen/text_16" />
        <TextView
            android:id="@+id/tv_paytype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_holo_dark"
            android:textSize="@dimen/text_16" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:layout_marginTop="@dimen/gauge_6"
        android:paddingLeft="@dimen/gauge_30"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缴费金额："
            android:textColor="@color/gray_holo_dark"
            android:textSize="@dimen/text_16" />
        <TextView
            android:id="@+id/tv_payMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_holo_dark"
            android:textSize="@dimen/text_16" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/gauge_1"
        android:background="@color/gray"/>

</LinearLayout>